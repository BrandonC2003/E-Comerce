@model E_Comerce.Models.CrearCuenta

@{
    ViewBag.Title = "CrearCuenta";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Cuenta</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @id = "inputNombre", @placeholder = "Ingresa tu nombre" } })
                                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger"})
                                        <label for="inputNombre">Nombre</label>
                                    </div>
                                </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @id = "inputApellido", @placeholder = "Ingresa tu apellido" } })
                                    @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                                    <label for="inputApellido">Apellido</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control", @id = "Usuario", @placeholder = "Ingresa tu nombre de usuario" } })
                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                            <label for="Usuario">Nombre de Usuario</label>
                        </div>
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", @id = "inputEmail", @placeholder = "Ingresa tu correo electronico" } })
                            @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                            <label for="inputEmail">Correo Electronico</label>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control", @id = "inputPassword", @placeholder = "Crear contrasena" } })
                                    @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                                    <label for="inputPassword">Contraseña</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "form-control", @id = "inputPasswordConfirm", @placeholder = "Crear contrasena" } })
                                    @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                                    <label for="inputPasswordConfirm">Confirmar Contraseña</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 mb-0">
                            <div class="d-grid">
                                <input type="submit" value="Crear Cuenta" class="btn btn-primary btn-block" />
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a href="@Url.Action("Index")">Tienes una cuenta existente? Volver al Inicio de Sesión</a></div>
                </div>
            </div>
        </div>
    </div>
</div>