<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_Proveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.ID_Proveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            @*<td>
                    @Html.ActionLink("Actualizar", "Edit", new { id = item.ID_Proveedor }, new { @class = "btn btn-warning btn-sm" })|
                    @Html.ActionLink("Detalle", "Details", new { id = item.ID_Proveedor }, new { @class = "btn btn-info btn-sm" })|
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Proveedor }, new { @class = "btn btn-danger btn-sm" })
                </td>*@
            <td>
                <a class="btnUpdate btn btn-outline-dark" href="#demo" data-bs-toggle="modal" data-id="@item.ID_Proveedor">
                    <i class="fa fa-undo-alt"></i>
                </a>
                <a class="btnDetail btn btn-outline-primary" href="#demo" data-bs-toggle="modal" data-id="@item.ID_Proveedor">
                    <i class="fas fa-eye"></i>
                </a>
                <a class="btnDelete btn btn-outline-dark btnDelete" href="#demo" data-bs-toggle="modal" data-id="@item.ID_Proveedor">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>


        </tr>
    }

</table>

