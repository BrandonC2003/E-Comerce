@{

}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - StarTech</title>
    <link rel="shortcut icon" href="~/Imagenes/Logo E-Comerce.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand text-white" href="@Url.Action("Index","Inicio")">StarTech</a>
            @* <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>*@
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active text-white" aria-current="page" href="@Url.Action("Index","Tienda")">Inicio</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="@Url.Action("Index","Categoria")">Categorias</a></li>
                </ul>
                <div class="d-flex">
                    <a class="btn btn-outline-dark" href="@Url.Action("Index","Carrito")">
                        <i class="fa fa-shopping-cart text-white"></i>
                        Carrito
                        <span class="badge bg-dark text-white ms-1 rounded-pill" id="cantidadcarrito">@Session["Carrito"].ToString()</span>
                    </a>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"><a class="dropdown-item text-white" href="@Url.Action("CerrarSesion","Tienda")">Cerrar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>  
    <div id="layoutSidenav_content">
        <main class="container-fluid">
            @RenderBody()
        </main>
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; StarTech 2022</div>
                </div>
            </div>
        </footer>
    </div>

   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/complementos")
    @RenderSection("scripts", required: false)
</body>
</html>
