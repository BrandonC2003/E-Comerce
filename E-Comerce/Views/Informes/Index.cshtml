@model IEnumerable<E_Comerce.sp_ProMasVResult>



@{
    ViewBag.Title = "Index";
}

<h2>Informes</h2>

<div class="container text-center">
    <div class="row row-cols-2">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <b>Productos Mas Vendido</b>
                </div>
                <div class="card-body">
                    <canvas id="pastel" width="10" height="5"></canvas>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <b>Ventas Ultimos 3 Meses</b>
                </div>
                <div class="card-body">
                    <canvas id="barras" width="10" height="5"></canvas>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <b>Tabla de Valores</b>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Producto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Total)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Producto)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <b>Tabla de Valores</b>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Año
                                </th>
                                <th>
                                    Mes
                                </th>
                                <th>
                                    Total Ventas
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.RetorV)
                            {
                            <tr>
                                <td>@item.Año</td>
                                <td>@item.Mes</td>
                                <td>@item.Total.ToString(format:"#,##0.00" ) </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>


        jQuery.ajax({
            url: '@Url.Action("Grafico","Informes")',
            type: "GET",
            dataType: "json",
            contentType: "aplication/json; charset=utf-8",
            success: function (data) {
                var productos = [];
                var total = [];
                console.log(data)
                for (var i = 0; i < data.length; i++) {
                    productos.push(data[i].Producto)
                    total.push(data[i].Total)

                }
                var controlpas = document.getElementById("pastel");
                var graficopie = new Chart(controlpas, {

                    type: 'pie',
                    data: {
                        labels: productos,
                        datasets: [{
                            data: total,
                            backgroundColor: ['#007bff', '#dc3545', '#ffc107'],
                        }],
                    }

                });


            },
             error: function (erorr) {
                console.log(error)
             }


        });

       jQuery.ajax({
            url: '@Url.Action("Graficobar","Informes")',
            type: "GET",
            dataType: "json",
            contentType: "aplication/json; charset=utf-8",
            success: function (data) {
                var meses = [];
                var total = [];
                console.log(data)
                for (var i = 0; i < data.length; i++) {
                    meses.push(data[i].Mes)
                    total.push(data[i].Total)

                }
                 var controlbar = document.getElementById("barras");
                 var graficobar = new Chart(controlbar, {

                    type: 'bar',
                    data: {
                        labels: meses,
                        datasets: [{
                            label:"Mes",
                            backgroundColor: ['#007bff', '#dc3545', '#ffc107'],
                            data:total,
                        }]
                     },
                     options: {
                         scales: {
                             xAxes: [{
                                 gridLines: {
                                     display: false
                                 }
                             }],
                             yAxes: [{
                                 gridLines: {
                                     display: true
                                 }
                             }]
                         }
                     }

                });


           },
              error: function (erorr) {
                console.log(error)
              }


        });

    </script>
}

