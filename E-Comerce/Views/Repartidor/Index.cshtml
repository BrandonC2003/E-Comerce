@model IEnumerable<E_Comerce.Vw_Repartidor>

@{
    ViewBag.Title = "Index";
}

<div class="modal fade" id="demo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-bg-dark">
                <h1 class="modal-title fs-5" id="exampleModalLabel">StarTech</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Cargando...
            </div>
        </div>
    </div>
</div>

<h2>Index</h2>

<div class="row">
    <div class="col-sm-3">
        <a class="btn btn-outline-dark" id="btnAgregar" href="#demo" data-bs-toggle="modal">
            Agregar
        </a>
    </div>
</div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Repartidores)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimoUsuarioActualiza)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimaFechaActualiza)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Repartidores)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimoUsuarioActualiza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UltimaFechaActualiza)
                </td>

                <td>
                    <a class="btnEditar btn btn-outline-secondary" href="#demo" data-bs-toggle="modal" data-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="btnDetail btn btn-outline-primary" href="#demo" data-bs-toggle="modal" data-id="@item.Id">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a class="btn btn-outline-secondary btnEliminar" href="#demo" data-bs-toggle="modal" data-id="@item.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>

            </tr>
        }

    </table>

@section scripts{

    <script src="~/Scripts/JSPersonalizados/Repartidor.js"></script>
}

