@model IEnumerable<E_Comerce.V_Compras>

@{
    ViewBag.Title = "Compras";
}
<div class="card mt-2">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <i class="fas fa-shopping-basket me-1"></i>
                Lista de compras
            </div>
            <div class="col-6 d-md-flex justify-content-md-end">
                <a class="btn btn-primary" href="@Url.Action("Create", "Compras")">
                    <i class="fa fa-plus-circle"></i>
                    Nueva compra
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">        
        <table class="Tablas cell-border" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UltimoUsuarioActualiza)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UltimaFechaActualiza)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UltimoUsuarioActualiza)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UltimaFechaActualiza)
                        </td>
                        <td>
                            <a class="btnEditar btn btn-outline-secondary" href="#ModalDetalleVenta" data-bs-toggle="modal" data-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btnDetailles btn btn-outline-secondary" href="#ModalDetalleVenta" data-bs-toggle="modal" data-id="@item.Id">
                                <i class="fas fa-file"></i>
                            </a>
                            <a class="btnEliminar btn btn-outline-secondary" href="#ModalDetalleVenta" data-bs-toggle="modal" data-id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                            @*@Html.ActionLink("Editar", "Edit", "", new { id = item.Id }, new { @class = "glyphicon glyphicon-log-in" }) |
                            @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
<script>
    $('.Tablas').DataTable({
        responsive: true,
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
        }
    });        
</script>
}
